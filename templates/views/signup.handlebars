<div class="sidenav">
  <div class="login-main-text">
      <h1>Sign-up</h1>
      <p>Register your details and get access to re$ale</p>
  </div>
</div>
<div class="main">
  {{>navbar}}
  <div class="col-md-12 col-sm-12">
    <div class="add-product-form">
      <form
        id="create-user"
        action="/users/add"
        method="post"
        class="form-horizontal needs-validation"
        novalidate
      >
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">First Name</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter first name"
            id="firstName"
            name="firstName"
            aria-label="name"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-firstName-label">
            First name cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">Last Name</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter last name"
            id="lastName"
            name="lastName"
            aria-label="name"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div id="invalid-lastName-label" class="invalid-feedback">
            Last name cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">Username</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter username"
            id="userName"
            name="userName"
            aria-label="userName"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-username-label">
            Username cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">Password</span>
          <input
            type="password"
            class="form-control"
            placeholder="Enter password"
            id="password"
            name="password"
            aria-label="password"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div id="invalid-password-label" class="invalid-feedback">
            Password cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-image">Profile Image</span>
          <input
            id="imageUpload"
            name="imageUpload"
            accept="image/*"
            class="form-control"
            type="file"
            id="formFileMultiple"
            aria-label="imageUpload"
            aria-describedby="span-image"
          />
          <div class="invalid-feedback" id="invalid-firstName-label">
            Please select an image
          </div>
        </div>
        <div class="input-group mb-3">
          <span
            class="input-group-text"
            id="span-description"
          >Biography</span>
          <textarea
            class="form-control"
            id="biography"
            name="biography"
            aria-label="Description"
            aria-describedby="span-description"
            placeholder="Describe yourself"
            oninput="removeErrorClass(this)"
            required
          ></textarea>
          <div class="invalid-feedback" id="invalid-biography-label">
            Description cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">Date of Birth</span>
          <input
            type="date"
            class="form-control"
            placeholder="Enter date of birth"
            id="dob"
            name="dob"
            aria-label="dob"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-dob-label">
            Date of Birth cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">Email Id</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter email address"
            id="email"
            name="email"
            aria-label="name"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-email-label">
            Email Id cannot be empty
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-name">Phone Number</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter phone number (xxx-xxx-xxxx)"
            id="phoneNumber"
            name="phoneNumber"
            aria-label="name"
            aria-describedby="span-name"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-phoneNumber-label">
            Phone number cannot be empty
          </div>
        </div>
         <div class="input-group mb-3">
          <span class="input-group-text" id="span-gender">Gender</span>
          <div class="form-control">
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                value="male"
                id="gender_male"
                aria-label="male"
              />
              <label class="form-check-label" for="status_available">
                Male
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                value="female"
                id="gender_female"
                aria-label="female"
              />
              <label class="form-check-label" for="status_sold">
                Female
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                value="other"
                id="gender_other"
                aria-label="other"
                checked
              />
              <label class="form-check-label" for="status_sold">
                Other
              </label>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-street">Address</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter street address"
            id="street"
            name="street"
            aria-label="street"
            aria-describedby="span-street"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-street-label">
            Please enter street details
            <address></address>
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="span-city">City</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter city"
            id="city"
            name="city"
            aria-label="city"
            aria-describedby="span-city"
            oninput="removeErrorClass(this)"
            required
          />
          <span class="input-group-text" id="span-state">State</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter state"
            id="state"
            name="state"
            aria-label="state"
            maxlength="2"
            aria-describedby="span-state"
            oninput="removeErrorClass(this)"
            required
          />
          <span class="input-group-text" id="span-zip">Zip</span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Zip code"
            id="zip"
            name="zip"
            aria-label="zip"
            pattern="[0-9]{5}"
            aria-describedby="span-zip"
            oninput="removeErrorClass(this)"
            required
          />
          <div class="invalid-feedback" id="invalid-address-label">
            Address field(s) annot be empty
          </div>
        </div>
        <div id="error-div" class="alert alert-danger" role="alert">
          Make sure all inputs meet the requirements
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Sign-up</button>
            {{!-- <a class="btn btn-primary" target="__blank" href="/">Back</a> --}}
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
