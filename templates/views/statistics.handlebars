<form action="/">
  <button class="btn btn-dark" id="backBtn">Back to home</button>
</form>
<main>
  <h1>re$ale Statistics</h1>
  <div>
    {{#if noRating}}
      <div class="card prodCard">
        <div class="card-header">Highest Rated User</div>
        <div class="divimage2">
          <img
            src="/public/images/norating.png"
            class="card-img-top2"
            alt="No rating available"
          />
        </div>
        <div class="card-body">
          <p class="card-text">We're sorry, but we cannot find a user with the
            highest rating!</p></div>
      </div>
    {{else}}
      <div class="card prodCard">
        <div class="card-header">Highest Rated User</div>
        <div class="divimage2">
          <img
            src={{rating.profilePicture}}
            class="card-img-top2"
            alt="{{rating.name}}"
          />
        </div>
        <div class="card-body">
          <p class="card-text">Our highest rated user is
            {{rating.name}}
            with a rating of
            {{rating.finalRating}}
            stars.</p></div>
      </div>
    {{/if}}
    <div class="card prodCard">
      <div class="card-header">Most Listings</div>
      <div class="divimage2">
        <img
          src={{listing.profilePicture}}
          class="card-img-top2"
          alt="{{listing.name}}"
        />
      </div>
      <div class="card-body">
        <p class="card-text">The user with the most listings is
          {{listing.name}}
          with
          {{listing.numOfProducts}}
          listings.</p></div>
    </div>
  </div>
</main>