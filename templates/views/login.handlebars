<div class="sidenav">
  <div class="login-main-text">
    <h1>Login Page</h1>
    <p>Login to access re$ale</p>
  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <form id="login-form">
        <div class="form-group">
          <label>Username</label>
          <input
            id="username"
            name="username"
            type="text"
            class="form-control"
            placeholder="Enter username"
            oninput="removeErrorClass(this)"
          />
          <div id="invalid-username-label" class="invalid-feedback">
            Please enter username
          </div>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            id="password"
            name="password"
            type="password"
            class="form-control"
            placeholder="Enter password"
            oninput="removeErrorClass(this)"
          />
          <div id="invalid-password-label" class="invalid-feedback">
            Please enter password
          </div>
        </div>
        <div id="error-div" class="alert alert-danger d-none">
          Either username or password is invalid
        </div>
        <button type="submit" class="btn btn-black">Login</button>
        <a href="/signup" role="button" class="btn btn-secondary">Register</a>
      </form>
    </div>
  </div>
</div>
<script src="/public/js/login.js"></script>