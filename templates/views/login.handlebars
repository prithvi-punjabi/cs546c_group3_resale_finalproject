<div class="sidenav">
  <div class="login-main-text">
    <h1>Login Page</h1>
    <p>Login to access re$ale</p>
  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <form>
        <div class="form-group">
          <label>Username</label>
          <input
            name="username"
            type="text"
            class="form-control"
            placeholder="Enter username"
            required
          />
          <div class="invalid-feedback">
            Please enter username
          </div>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            name="password"
            type="password"
            class="form-control"
            placeholder="Enter password"
            required
          />
          <div class="invalid-feedback">
            Please enter password
          </div>
        </div>
        <div id="error-div" class="invalid-feedback">
          Either username or password is invalid
        </div>
        <button
          id="btn-login"
          type="submit"
          class="btn btn-black"
        >Login</button>
        <a href="/signup" role="button" class="btn btn-secondary">Register</a>
      </form>
    </div>
  </div>
</div>