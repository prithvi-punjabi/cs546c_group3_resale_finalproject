<input type="hidden" id="user_id" name="user_id" value="{{currChat.user_id}}">
<div class="row clearfix full-height">
    <div class="col-lg-12">
        <div class="card-chat chat-app">
            <div id="plist" class="people-list">
                <h3 class="text-center">Chats</h3>
                <ul id="ul-chat" class="list-unstyled chat-list mt-2 mb-0">
                    {{#each chats}}
                    <li id="{{user_id}}" class="clearfix">
                        <img src="{{profilePicture}}" alt="avatar">
                        <div class="about">
                            <div class="name">{{userName}}</div>
                            <div class="status"> <i class="fa fa-circle offline"></i>{{userName}}</div> 
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="chat">
                <div class="chat-header clearfix">
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                <img src="{{currChat.profilePicture}}" alt="avatar">
                            </a>
                            <div class="chat-about">
                                <h6 class="m-b-0">{{currChat.userName}}</h6>
                                <small>{{currChat.userName}}</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="chat-history">
                    <ul id="ul-msg" class="m-b-0">
                      {{#each currChat.message}}
                        {{#if isSent }}
                        <li class="clearfix">
                            <div class="message-data text-center">
                                <span class="message-data-time text-center">{{time}}</span>
                            </div>
                            <div class="message other-message float-right">{{msg}}</div>
                          </li>
                        {{else}}
                        <li class="clearfix">
                          <div class="message-data text-center">
                              <span class="message-data-time">{{time}}</span>
                          </div>
                          <div class="message my-message">{{msg}}</div>                                    
                        </li>
                        {{/if}}
                      {{/each}}
                    </ul>
                </div>
                <div class="chat-message clearfix">
                    <div class="input-group mb-0 fixed-bottom">
                        <div id="btn-send" class="input-group-prepend">
                            <span class="input-group-text full-height"><i class="fa fa-send"></i></span>
                        </div>
                        <input id="input-msg" type="text" class="form-control" placeholder="Enter text here...">                                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/public/js/chat.js"></script>