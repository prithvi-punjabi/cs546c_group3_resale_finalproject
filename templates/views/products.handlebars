{{! <div id="logo">
  <img src="/public/images/resale.png" alt="Resale Logo" />
</div> }}
<div class="topnav">
  <div id="logo">
    <img src="/public/images/resale.png" alt="resale logo" />
  </div>
  <a class="active" href="#home">Home</a>
  <a href="#about">About</a>
  <a href="#contact">Statistics</a>
  <div class="search-container">
    <input
      type="text"
      id="myInput"
      onkeyup="searchBar()"
      placeholder="Find products.."
    />
    <button
      class="btn btn-outline-secondary"
      onClick="clearInput()"
      id="clearButton"
    ><span id="respClearText">Clear</span></button>
  </div>
</div>
<div id="filterDivButton">
  <button class="w3-button w3-medium" onclick="w3_open()">â˜°</button>
</div>
<div
  class="w3-sidebar w3-bar-block w3-border-right"
  style="display:none"
  id="mySidebar"
>
  <div>
    Filter products
    <button
      onclick="w3_close()"
      id="sidebarCloseBut"
      class="btn btn-close"
    ></button>
  </div>
  <div id="filterDiv">
    <div id="priceDiv">
      By Price:
      <br />
      <label for="price">Price below: <span id="priceVal"></span></label><br />
      <input
        name="price"
        type="range"
        min="10"
        max="1000"
        value="1000"
        class=""
        id="price"
        onchange="filterByPrice()"
      /><br />
    </div>
    <div id="locDiv">
      By Location:<br />
      <input type="checkbox" name="location" value="NY" id="NewYork" checked />
      <label for="NewYork">NY</label><br />
      <input
        type="checkbox"
        id="NewJersey"
        name="location"
        value="NJ"
        checked
      />
      <label for="NewJersey">NJ</label><br />
      <button onclick="filterLocation()">Set Location Filter</button>
    </div>
  </div>
  <button id="clearAll" onclick="clearAllFilters()">Clear All Filters</button>
</div>

{{#each products}}
  <div class="card">
    <div class="card-header">{{name}}
      {{! <button type="button" class="btn btn-outline-danger">
        <i class="bi bi-heart"></i>
      </button>  }}
    </div>
    <div class="divimage">
      <img src={{images}} class="card-img-top" alt="{{name}}" />
    </div>
    <div class="card-body">
      <h5 class="card-title">${{price}}</h5>
      <p class="card-text">
        Condition:
        {{condition}}<br />
        Location:
        {{location.city}},
        <span class="locationState">{{location.state}}</span><br />
        Date Listed:
        {{dateListed}}
      </p>
      <a href="#" class="btn btn-primary">View item</a>
    </div>
  </div>
{{/each}}
<script src="/public/js/clientside.js"></script>