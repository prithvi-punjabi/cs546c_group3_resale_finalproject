<div
  class="modal fade"
  id="testModal"
  tabindex="-1"
  aria-labelledby="testModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="testModalLabel">Please tell us what you
          think about re$ale</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="testButClose"
        ></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/about/add/{{user._id}}" id="testForm">
          <label for="message" class="emailLabel">Message:</label><br />
          <textarea name="message" rows="5" cols="56" id="message"></textarea>
        </form>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
          id="testimAlert"
        >
          <span id="testimMsgAlert"></span>
          <button
            type="button"
            class="btn-close"
            aria-label="Close"
            id="closeTestimAlert"
          ></button>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Discard</button>
        <button
          type="submit"
          class="btn btn-primary"
          form="testForm"
          id="testFormSubmit"
        >Submit</button>
      </div>
    </div>
  </div>
</div>
