<div class="panel panel-default">
<div class="row">
            <div class="col-md-4 " id="profileSection">
              <div>
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                      <h1>Profile</h1>
                    <img src="../..{{profilePicture}}" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                       <h1 style="color:white;">{{nameOfUser}}</h1>
                      
                      <p class="font-size-sm">{{biography}}</p>
                      <h2>Rating: {{rating}} <span class = "fa fa-star checked"></span></h2>
                    </div>
                  </div>
                </div>
              </div>
               </div>
     <div class="col-md-8">
              <div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h3 class="mb-0">Email:</h3>
                    </div>
                    <div class="col-sm-9 text-secondary" style="font-weight: 700;">
                       {{email}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h3 class="mb-0"> Phone Number:</h3>
                    </div>
                    <div class="col-sm-9 text-secondary" style="font-weight: 700;">
                      {{phoneNumber}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h3 class="mb-0">User Name :</h3>
                    </div>
                    <div class="col-sm-9 text-secondary" style="font-weight: 700;">
                      {{userName}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h3 class="mb-0">Date Of Birth</h3>
                    </div>
                                  
                    <div class="col-sm-9 text-secondary" style="font-weight: 700;">
                      {{dob}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h3 class="mb-0">Gender:</h3>
                    </div>
                    <div class="col-sm-9 text-secondary" style="font-weight: 700;">
                       {{gender}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h3 class="mb-0"> Address:</h3>
                    </div>
                    <div class="col-sm-9 text-secondary" style="font-weight: 700;">
                    {{address.streetAddress}}, {{address.city}}, {{address.state}}, {{address.zip}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">                
                    <div class="col-sm-9">
                      <a class="btn btn-primary" href="/users/update">Edit</a>
                    </div>
                  </div>
                </div>
              </div>

                
              </div>
            </div>
