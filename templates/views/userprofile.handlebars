<div class="panel panel-default">
  <div class="row">
    <div class="col-md-4 " id="profileSection">
      <div>
        <div class="card-body">
          <div class="d-flex flex-column align-items-center text-center">
            <h1>Profile</h1>
            <img src="../..{{profilePicture}}" alt="{{nameOfUser}}" class="rounded-circle" width="150">
            <div class="mt-3">
              <h1 class="colorb">{{nameOfUser}}</h1>
              <p class="font-size-sm">{{biography}}</p>
              <h2>Rating: {{rating}} <span class = "fa fa-star checked"></span></h2>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex flex-column align-items-center text-center">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="dark-mode-switch" {{#if user.darkTheme}}checked{{/if}}>
          <label class="form-check-label" for="dark-mode-switch">Dark Mode</label>
        </div>
      </div>
      <div id="error-div" class="alert alert-danger mx-5 my-3" role="alert">
        Failed to change theme
      </div>
    </div>
    <div class="col-md-8">
      <div class="row">{{>navbar}}</div>
      <div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <h3 class="mb-0">Email:</h3>
            </div>
            <div class="col-sm-9 text-secondary font700 " >{{email}}
              <a class="btn btn-primary floatRight" href="/users/update" id="updateProf">Edit Profile</a>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h3 class="mb-0"> Phone Number:</h3>
            </div>
            <div class="col-sm-9 text-secondary font700">{{phoneNumber}}</div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h3 class="mb-0">User Name :</h3>
            </div>
            <div class="col-sm-9 text-secondary font700">{{userName}}</div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h3 class="mb-0">Date Of Birth</h3>
            </div>
            <div class="col-sm-9 text-secondary font700">{{dob}}</div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h3 class="mb-0">Gender:</h3>
            </div>
            <div class="col-sm-9 text-secondary font700"> {{gender}}</div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h3 class="mb-0"> Address:</h3>
              </div>
            <div class="col-sm-9 text-secondary font700">{{address.streetAddress}}, {{address.city}}, {{address.state}}, {{address.zip}}</div>
          
          <hr>
      
        </div>
      </div>
    </div>
  </div>
<div class="userProdHead">Favourite Products</div>
<div class="scrollmenu">
  {{#if favouriteProducts}}
  {{#each favouriteProducts}}
  <div class="card userCard">
    <div class="card-header">{{this.prodname}}</div>
      <div class="divimage ">
        <img src={{this.imageprod}} class="card-img-top" alt="{{this.prodname}}">
      </div>
      <div class="card-body">
        <h4 class="card-title">${{this.prices}}</h4>
        <a href="/products/get/{{this.prodid}}" class="btn btn-primary">View Item</a>
      </div>
    </div>  
  {{/each}}
  {{else}}
  <div class="card userCard noFav mx-auto">
    <div class="card-header">No Favourite Products</div>
      <div class="divimage ">
        <img src="/public/images/nofav.png" class="card-img-top" alt="No favourites">
      </div>
      <div class="card-body">
       <p>No favourite products yet!</p>
       <a href="/" class="btn btn-primary">Find Products</a>
      </div>
    </div>  
  {{/if}}
</div>

<div class="userProdHead">Listed Products</div>
<div class="scrollmenu">
  {{#if listedProducts}}
  {{#each listedProducts}}
  <div class="card userCard">
    <div class="card-header">{{this.names}}</div>
      <div class="divimage ">
        <img src={{image}} class="card-img-top" alt="no image">
      </div>
      <div class="card-body">
        <h4 class="card-title">${{this.price}}</h4>
        <a href="/products/get/{{this.idno}}" class="btn btn-primary">View Item</a>
      </div>
    </div>  
  {{/each}}
  {{else}}
  <div class="card userCard noFav mx-auto">
    <div class="card-header">No Listed Products</div>
      <div class="divimage ">
        <img src="/public/images/nofav.png" class="card-img-top" alt="No listed products">
      </div>
      <div class="card-body">
       <p>You have not listed any products yet!</p>
       <a href="/products/new" class="btn btn-primary">List Products</a>
      </div>
    </div>  
  {{/if}}
</div>

